<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night theme (same as day - always dark) -->
    <style name="Theme.RSA_chat" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Dark background colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:colorBackground">@color/dark_background</item>
        
        <!-- Primary brand color (blue accent) -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary/accent color -->
        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- EditText styling -->
        <item name="editTextColor">@color/text_primary</item>
        <item name="android:editTextColor">@color/text_primary</item>
    </style>
</resources>